<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.bais.moust.videoplayer"
    version="1.0.1">

    <name>Video Player</name>
    <description>Native Video Player Plugin</description>
    <license>pearl</license>
    <keywords>cordova,media,player,video</keywords>
    <repo>https://github.com/pearl-wu/videoviewEir.git</repo>
    <issue>https://github.com/pearl-wu/videoviewEir.git</issue>

    <js-module src="www/videoplayer.js" name="VideoPlayer">
        <clobbers target="VideoPlayer" />
    </js-module>

    <platform name="android">
        
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="VideoPlayer">
                <param name="android-package" value="com.bais.moust.videoplayer.VideoPlayer"/>
            </feature>
        </config-file>
        
                <config-file target="AndroidManifest.xml" parent="/*">
		  <uses-permission android:name="android.permission.INTERNET" />
		  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
		  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
		</config-file>

        <source-file src="src/android/VideoPlayer.java" target-dir="src/com/bais/moust/videoplayer/videoplayer" />

    </platform>

</plugin>

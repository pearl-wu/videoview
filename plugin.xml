<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.bais.cordova.videoview1"
    version="1.0">

    <name>Video Player</name>
    <description>Native Video Player Plugin</description>
    <license>pearl</license>
    <keywords>media,video player</keywords>
    <repo>https://github.com/pearl-wu/video_view.git</repo>
    <issue>https://github.com/pearl-wu/video_view.git</issue>
   
    <engines>
        <engine name="cordova" version=">=4.0.0" />
    </engines>

    <js-module src="www/videoplayer.js" name="VideoPlayer">
        <clobbers target="VideoPlayer" />
    </js-module>
	
    <platform name="android">
    	
    	<config-file target="AndroidManifest.xml" parent="/manifest/application">
		<activity android:name="com.bais.cordova.video.VideoPlayerActivity" android:screenOrientation="landscape" />
		<activity android:name="com.bais.cordova.video.videocontroller" android:configChanges="orientation|screenSize" android:label="videocontroller" />
	</config-file>
    	
	<config-file target="AndroidManifest.xml" parent="/*">
		<uses-permission android:name="android.permission.INTERNET" />
		<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
		<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	</config-file>
    	
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="VideoPlayer">
                <param name="android-package" value="com.bais.cordova.video.VideoPlayer"/>
            </feature>
        </config-file>
        <source-file src="src/android/VideoPlayer.java" target-dir="src/com/bais/cordova/video/" />
        <source-file src="src/android/videocontroller.java" target-dir="src/com/bais/cordova/video/" />
        <source-file src="src/android/VideoControllerView.java" target-dir="src/com/bais/cordova/video/" />
        <source-file src="src/android/VideoPlayerActivity.java" target-dir="src/com/bais/cordova/video/" />
        
	<source-file src="res/drawable/loading.png" target-dir="res/drawable/" />
	<source-file src="res/drawable/image_box.png" target-dir="res/drawable/" />
	<source-file src="res/drawable/image_over.png" target-dir="res/drawable/" />
	<source-file src="res/drawable/image_play.png" target-dir="res/drawable/" />
	<source-file src="res/drawable/sb_bar.xml" target-dir="res/drawable/" />
	<source-file src="res/drawable/animationset.xml" target-dir="res/drawable/" />
	<source-file src="res/drawable/wait_anima.xml" target-dir="res/drawable/">
	<source-file src="res/drawable/str.png" target-dir="res/drawable/" />
	<source-file src="res/drawable/waiting.png" target-dir="res/drawable/" />
	<source-file src="res/drawable/loading_stro.png" target-dir="res/drawable/" />
	<source-file src="res/drawable/wait_anima.xml" target-dir="res/drawable/" />
	<source-file src="res/drawable/seekbar_horizontal.xml" target-dir="res/drawable/" />
	<source-file src="res/drawable-hdpi/duck_bar.png" target-dir="res/drawable-hdpi" />
	<source-file src="res/drawable-hdpi/ducky_bar.png" target-dir="res/drawable-hdpi" />
	<source-file src="res/drawable-hdpi/ffwd.png" target-dir="res/drawable-hdpi" />
	<source-file src="res/drawable-hdpi/next.png" target-dir="res/drawable-hdpi" />
	<source-file src="res/drawable-hdpi/pause.png" target-dir="res/drawable-hdpi" />
	<source-file src="res/drawable-hdpi/play.png" target-dir="res/drawable-hdpi" />
	<source-file src="res/drawable-hdpi/prev.png" target-dir="res/drawable-hdpi" />
	<source-file src="res/drawable-hdpi/rew.png" target-dir="res/drawable-hdpi" />
	<source-file src="res/drawable-ldpi/duck_bar.png" target-dir="res/drawable-ldpi" />
	<source-file src="res/drawable-ldpi/ducky_bar.png" target-dir="res/drawable-ldpi" />
	<source-file src="res/drawable-ldpi/ffwd.png" target-dir="res/drawable-ldpi" />

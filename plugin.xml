	<source-file src="res/layout/activity_video_player.xml" target-dir="res/layout/" />
	<source-file src="res/layout/media_controller.xml" target-dir="res/layout/" />
	<source-file src="res/values/styles.xml" target-dir="res/values/" />
    </platform>

</plugin>

